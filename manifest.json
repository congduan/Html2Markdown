{
  "manifest_version": 3,
  "name": "HTML to Markdown Converter",
  "version": "1.0",
  "description": "将当前网页的HTML转换为Markdown格式",
  "homepage_url": "https://github.com",
  "short_name": "HTML2MD",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "HTML to Markdown",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["libs/turndown.js", "libs/marked.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}